
public class Arbol {
	private Nodo raiz;
	
	public Arbol(){
		raiz=null;
	}
	
	public void insertar(Integer elemento){
		Nodo nuevo= new Nodo(elemento);
		if(raiz==null){
			raiz=nuevo;
		} else {
			Nodo aux= raiz;
			Nodo ant=null;
			while(aux != null){
				if(nuevo.getDato()<aux.getDato()){
					ant= aux;
					aux = ant.getIzq();
				}else{
					aux.setDer(nuevo);
				}
			}
			
		}
	}

}
